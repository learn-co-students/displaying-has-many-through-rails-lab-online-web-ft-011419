<h1><%= @patient.name %>Appointments</h1>
    <ul>
        <% @appointments.each do |app| %>
            <li>
                <%= app.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> - 
                <%= link_to app.doctor.name, doctor_path(app.doctor) %>
            </li>
            <% end %>
    </ul>